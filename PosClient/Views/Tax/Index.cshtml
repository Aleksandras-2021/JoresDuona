@model List<PosShared.Models.Tax>

<h2>Taxes</h2>

<a asp-action="Create" class="btn btn-primary">Create New Tax</a>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Amount</th>
            <th>Is Percentage</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tax in Model)
        {
            <tr>
                <td>@tax.Name</td>
                <td>@tax.Amount</td>
                <td>@(tax.IsPercentage ? "Yes" : "No")</td>
                <td>@tax.Category</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@tax.Id" class="btn btn-warning">Edit</a>
                    <form asp-action="Delete" asp-route-id="@tax.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
