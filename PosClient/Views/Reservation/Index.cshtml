@model List<PosShared.Models.Reservation>

<div class="container mt-4">
    <h2>Reservations</h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            @TempData["Error"]
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            No reservations found.
        </div>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Service</th>
                    <th>Customer Name</th>
                    <th>Phone</th>
                    <th>Date & Time</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var reservation in Model)
                {
                    <tr>
                        <td>@reservation.Service?.Name</td>
                        <td>@reservation.CustomerName</td>
                        <td>@reservation.CustomerPhone</td>
                        <td>@reservation.ReservationTime.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@reservation.Status</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@reservation.Id" class="btn btn-sm btn-primary">Edit</a>
                            <a asp-action="Cancel" asp-route-id="@reservation.Id" class="btn btn-sm btn-danger">Cancel</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>