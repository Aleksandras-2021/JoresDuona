@model List<PosShared.Models.Reservation>

<div class="container mt-4">
    <h2>Reservations</h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            @TempData["Error"]
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            No reservations found.
        </div>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Service</th>
                    <th>Customer Name</th>
                    <th>Phone</th>
                    <th>Date & Time</th>
                    <th>End</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var reservation in Model)
                {
                    <tr>
                        <td>@reservation.ServiceId</td>
                        <td>@reservation.CustomerName</td>
                        <td>@reservation.CustomerPhone</td>
                        <td>@reservation.ReservationTime.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@reservation.ReservationEndTime.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@reservation.Status</td>
              <td>
                                    <form asp-action="Cancel" method="post" class="m-0">
                                        <input type="hidden" name="reservationId" value="@reservation.Id" />
                                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this reservation?');">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </form>
                                </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>