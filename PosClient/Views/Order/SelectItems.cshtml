@model PosShared.ViewModels.SelectItemsViewModel

@{
    ViewData["Title"] = "Select Items";
}

<h1>Select Items for Order @Model.OrderId</h1>
<h2>Untaxed charge: @Model.Order.ChargeAmount</h2>
<h2>Taxes charge: @Model.Order.TaxAmount</h2>

@if (Model.Order.Status != PosShared.Models.OrderStatus.Closed)
{
    <form asp-action="RedirectToPayment" asp-controller="Order" method="post">
        <input type="hidden" name="orderId" value="@Model.OrderId" />
        <input type="hidden" name="untaxedAmount" value="@Model.Order.ChargeAmount" />
        <input type="hidden" name="tax" value="@Model.Order.TaxAmount" />
        <button type="submit" class="btn btn-primary">Proceed to Payment</button>
    </form>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}


@if (Model.Items != null && Model.Items.Any() && Model.Order.Status != PosShared.Models.OrderStatus.Closed)
{
    <h2>Available Items</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Item ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>@item.Quantity</td>
                    <td>
                        <form asp-action="AddItemToOrder" method="post">
                            <input type="hidden" name="orderId" value="@Model.OrderId" />
                            <input type="hidden" name="itemId" value="@item.Id" />
                            <button type="submit" class="btn btn-success">Add to Order</button>
                        </form>
                    </td>

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No items available.</p>
}

@if (Model.OrderItems != null && Model.OrderItems.Any())
{
    <h2>Items Already in Order</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Item Name</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
                <th>Action</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var orderItem in Model.OrderItems)
            {
                <tr>
                    <td>@orderItem.Item.Name</td>
                    <td>@orderItem.Quantity</td>
                    <td>@orderItem.Price.ToString("C")</td>
                    <td>@((orderItem.Quantity * orderItem.Price).ToString("C"))</td>
                    @if (Model.Order.Status != PosShared.Models.OrderStatus.Closed)
                    {
                        <td>
                            <form asp-action="RemoveItemFromOrder" method="post">
                            <input type="hidden" name="orderId" value="@Model.OrderId" />
                            <input type="hidden" name="orderItemId" value="@orderItem.Id" />
                            <button type="submit" class="btn btn-danger">Remove</button>
                        </form>
                    </td>
                    }
                    <td>
                        <a href="@Url.Action("ItemVariations", new { itemId = orderItem.ItemId, orderItemId = orderItem.Id, orderId = Model.OrderId})">
                            Select Variation
                        </a>
                    </td>
                    <td>
                        <form asp-action="GetOrderItemVariations" method="get">
                            <input type="hidden" name="orderId" value="@Model.OrderId" />
                            <input type="hidden" name="orderItemId" value="@orderItem.Id" />
                            <button type="submit" class="btn btn-danger">View Variations</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No items have been added to this order yet.</p>
}
