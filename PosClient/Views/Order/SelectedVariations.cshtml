@model PosShared.ViewModels.ItemVariationsViewModel

@{
    ViewData["Title"] = "Selected item Variations";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

<p>
    <a href="/Order/Payment/@Model.OrderId">Edit</a> |

</p>

<h3>Item Variations for Item: @Model.ItemId</h3>

<a asp-action="SelectItems" asp-route-orderId="@Model.OrderId" class="btn btn-secondary">
    Back to Order View
</a>
@if (Model.Variations.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Additional price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var variation in Model.Variations)
            {
                <tr>
                    <td>@variation.Id</td>
                    <td>@variation.Name)</td>
                    <td>@variation.AdditionalPrice</td>
                    <td>
                        <form asp-action="DeleteVariation" method="post" class="m-0">
                            <input type="hidden" name="varId" value="@variation.Id" />
                            <input type="hidden" name="orderId" value="@Model.OrderId" />
                            <input type="hidden" name="itemId" value="@variation.ItemId" />
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this Variation?');">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

=======
@if (Model.Variations.Any())
{
    <ul>
        @foreach (var variation in Model.Variations)
        {
            <li>
                OrderItemID:@Model.OrderItemId VariationID:@variation.Id - OrderId: @Model.OrderId
                <form method="post" asp-action="AddItemVariationToOrderItem">
                    <input type="hidden" name="orderItemId" value="@Model.OrderItemId" />
                    <input type="hidden" name="varId" value="@variation.Id" />
                    <input type="hidden" name="orderId" value="@Model.OrderId" />

                    <button type="submit" class="btn btn-primary">Add Variation</button>
                </form>
            </li>
        }
    </ul>
}
else
{
    <p>No variations available for this item.</p>
}
