@model PosShared.ViewModels.ReceiptViewModel

        <h1 class="text-center">Receipt for Order #@Model.OrderId</h1>
<div class="container my-4">


        <!-- Order Items -->
        @if (Model.OrderItems != null && Model.OrderItems.Any())
        {
            <h3 class="mb-3 mt-4">Items Already in Order</h3>
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Item Name</th>
                            <th>Quantity</th>
                            <th>Price</th>
                            <th>Tax</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var orderItem in Model.OrderItems)
                        {
                            <tr>
                                <td>@orderItem.Item.Name</td>
                                <td>@orderItem.Quantity</td>
                                <td>@orderItem.Price.ToString("C")</td>
                                <td></td>
                                <td>@((orderItem.Quantity * orderItem.Price).ToString("C"))</td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info text-center" role="alert">
                <i class="bi bi-info-circle"></i> No items have been added to this order yet.
            </div>
        }

        <!--Variations-->

    <div class="table-responsive my-4">
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Order Item ID</th>
                    <th>Variation ID</th>
                    <th>Quantity</th>
                    <th>Additional Cost</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var orderItemVariation in Model.OrderItemVariatons)
                {
                    <tr>
                        <td>@orderItemVariation.OrderItemId</td>
                        <td>@orderItemVariation.Id</td>
                        <td>@orderItemVariation.Quantity</td>
                        <td>@orderItemVariation.AdditionalPrice.ToString("C")</td>
 
                    </tr>
                }
            </tbody>
        </table>
    </div>





</div>

        

        <div class="text-center">
            <button class="btn btn-primary" onclick="window.print()">Print Receipt</button>
            <a href="/Orders" class="btn btn-secondary">Back to Orders</a>
        </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
