@model List<PosShared.Models.Discount>
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
<div class="container my-4">
    <h1 class="text-center mb-4">Manage Discounts</h1>
    <div class="d-flex justify-content-between align-items-center mb-3">
        <p class="m-0">Below is a list of all discounts.</p>
        <a asp-action="Create" class="btn btn-outline-primary btn-sm">
            <i class="bi bi-plus-circle"></i> Add Discount
        </a>
    </div>
    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Description</th>
                        <th>Amount</th>
                        <th>Type</th>
                        <th>Valid From</th>
                        <th>Valid To</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var discount in Model)
                    {
                        <tr>
                            <td>@discount.Description</td>
                            <td>@discount.Amount @(discount.IsPercentage ? "%" : "")</td>
                            <td>@(discount.IsPercentage ? "Percentage" : "Fixed")</td>
                            <td>@discount.ValidFrom.ToString("yyyy-MM-dd")</td>
                            <td>@discount.ValidTo.ToString("yyyy-MM-dd")</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@discount.Id" class="btn btn-warning btn-sm">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <form asp-action="Delete" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@discount.Id" />
                                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this discount?');">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
