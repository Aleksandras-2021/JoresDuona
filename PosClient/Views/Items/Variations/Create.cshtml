@model PosShared.ViewModels.ItemVariationCreateViewModel

<h1>Create Variation</h1>

<form asp-action="VariationCreate" method="post">
    <input type="hidden" asp-for="ItemId" />

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AdditionalPrice" class="control-label"></label>
        <input asp-for="AdditionalPrice" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="AdditionalPrice" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Variations" asp-route-itemId="@Model.ItemId" class="btn btn-secondary">Back to List</a>
</form>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}