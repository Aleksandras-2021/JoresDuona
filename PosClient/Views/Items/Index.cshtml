@model List<PosShared.Models.Item>

<h1>Items</h1>

<p>
    <a href="@Url.Action("Create", "Items")">Create new item</a>
</p>

@if (Model != null && Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Business Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Base Price</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.BusinessId</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.BasePrice</td>
                    <td>@item.Price</td>
                    <td>@item.Quantity</td>
                    <td>
                        <a asp-action="Variations" asp-route-itemId="@item.Id" class="btn btn-primary">View Variations</a>
                        <a href="/Items/Edit/@item.Id">Edit</a> |
                        <a href="/Items/Delete/@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No Items available.</p>
}
