@model PosShared.Models.User

<h2>Edit Business</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name">@Model.Name</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Phone">@Model.Phone</label>
        <input asp-for="Phone" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Email">@Model.Email</label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Address">@Model.Address</label>
        <input asp-for="Address" class="form-control" />
    </div>



    <button type="submit" class="btn btn-primary">Save</button>
</form>

<a href="/User/Index" class="btn btn-secondary">Back to List</a>
