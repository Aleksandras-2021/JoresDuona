@model PosShared.Models.Business

<h2>Edit Business</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name">@Model.Name</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber">@Model.PhoneNumber</label>
        <input asp-for="PhoneNumber" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Email">@Model.Email</label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Address">@Model.Address</label>
        <input asp-for="Address" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="VATCode">@Model.VATCode</label>
        <input asp-for="VATCode" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Type"></label>
        <select asp-for="Type" class="form-control">
            <!-- Populate your enum options here -->
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>

<a href="/Business/Index" class="btn btn-secondary">Back to List</a>
